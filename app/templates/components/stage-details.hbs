<div class="ui clearing segment">
  <div class="ui right floated small header">{{model.status}}</div>
  <div class="ui left floated header">Stage {{model.index}}: {{model.name}}</div>

  <div class="ui top attached menu">
    <a class="active item" data-tab="details">Details</a>
    {{#if model.logFetcher.isRunning}}
      <a class="item">
        <div class="ui active mini inline loader"></div>
      </a>
    {{else}}
      {{#each model.logFiles as |logFile|}}
        <a class="item" data-tab={{logFile.title}}>{{logFile.title}}</a>
      {{/each}}
    {{/if}}
  </div>

  <div class="ui bottom attached segment active tab" data-tab="details">
    <table class="ui small very basic table">
      <tr><td class="two wide">Type:</td><td>{{model.type}}</td></tr>
      <tr><td class="two wide">Namespace:</td><td>{{model.pod_namespace}}</td></tr>
      <tr><td class="two wide">Pod Name:</td><td>{{model.pod_name}}</td></tr>
      <tr><td class="two wide">Job Name:</td><td>{{model.job_name}}</td></tr>
    </table>
  </div>

  {{#each model.logFiles as |logFile|}}
  <div class="ui bottom attached segment tab" data-tab={{logFile.title}}>
    <pre>logs here</pre>
  </div>
  {{/each}}
</div>

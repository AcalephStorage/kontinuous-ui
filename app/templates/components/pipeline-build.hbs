{{main-menu}}

<div class="ui basic segment">
  <div class="ui breadcrumb">
    {{#link-to 'pipelines' class="section"}}<h1 class="ui header">Pipelines</h1>{{/link-to}}
    <i class="right angle icon divider"></i>
    <div class="active section">{{pipeline.current.name}}</div>
    <i class="right angle icon divider"></i>
    <div class="section">{{build.current.number}}</div>
  </div>

  <div class="ui right floated header">
    <a class="ui button" {{action "createBuild"}}>Create Build</a>
  </div>
</div>

<div class="ui basic segment">
  <div class="ui icon buttons">
    <button class="ui basic button" {{action "previousBuild"}}>
      <i class="left chevron icon"></i>
    </button>
    <button class="ui basic button" {{action "nextBuild"}}>
      <i class="right chevron icon"></i>
    </button>
  </div>
</div>

<div class="ui basic segment pipeline-build">
  <ul class="stages">
  {{#each build.current.stages as |stage|}}
    <li class="{{stage.status}} stage" {{action "selectStage" stage}}>
      <i class="legal icon"></i>
      <div class="label">{{stage.name}}</div>
    </li>
  {{/each}}
  </ul>

  {{#if selectedStage}}
    {{stage-details model=selectedStage}}
  {{/if}}
</div>

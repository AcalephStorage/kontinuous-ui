{{main-menu}}

<div class="ui basic segment">
  <div class="ui breadcrumb">
    <div class="active section"><h1 class="ui header">Pipelines</h1></div>
  </div>
  <div class="ui right floated header">
    {{#ui-link-to routeName='pipelines.create' tagName="button" class="ui button" }}Create Pipeline{{/ui-link-to}}
  </div>
  <div class="ui basic segment">
    <div class="ui cards">
    {{#each pipeline.all as |pipeline|}}
      {{#unless pipeline.isNew}}
        {{pipeline-card model=pipeline}}
      {{/unless}}
    {{/each}}
    </div>
  </div>
</div>

{{outlet}}
